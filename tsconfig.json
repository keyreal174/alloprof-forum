{
    "compilerOptions": {
        "allowJs": true,
        "jsx": "react",
        "lib": [
            "es2017",
            "dom",
            "dom.iterable"
        ],
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "target": "es2017",
        "module": "esnext",
        "baseUrl": ".",
        "paths": {
            "@core/*": ["./src/scripts/*"],
            "@vanilla/*": ["./applications/vanilla/src/scripts/*"],
            "@dashboard/*": ["./applications/dashboard/src/scripts/*"]
        }
    },
    "include": [
        "**/src/scripts/**/*.ts",
        "**/src/scripts/**/*.tsx",
        "global.ts"
    ],
    "exclude": [
        "**/node_modules"
    ]
}
