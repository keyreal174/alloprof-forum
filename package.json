{
    "name": "vanilla",
    "description": "Vanilla is a powerfully simple discussion forum you can easily customize to make as unique as your community.",
    "license": "GPL-2.0",
    "dependencies": {
        "axios": "^0.17.1",
        "babel-eslint": "^8.0.3",
        "babel-polyfill": "^6.26.0",
        "eslint": "^4.13.1",
        "lodash": "^4.17.4",
        "lodash.debounce": "^4.0.8",
        "moment": "^2.19.4",
        "promise-polyfill": "^6.1.0",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "setasap": "^2.0.0"
    },
    "devDependencies": {
        "@types/jest": "^22.0.0",
        "@vanillaforums/babel-preset": "^1.0.0",
        "babel-core": "^6.26.0",
        "babel-jest": "^22.0.4",
        "jest": "^22.0.4"
    },
    "jest": {
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/fixtures/",
            "/bower_components/"
        ],
        "watchPathIgnorePatterns": [
            "/fixtures/"
        ],
        "moduleNameMapper": {
            "@core/(.*)$": "<rootDir>/src/scripts/$1",
            "@dashboard/(.*)$": "<rootDir>/applications/dashboard/src/scripts/$1",
            "@vanilla/(.*)$": "<rootDir>/applications/vanilla/src/scripts/$1"
        }
    }
}
